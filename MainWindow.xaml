<Window x:Class="TicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Крестики-нолики" Height="450" Width="450">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Игровое поле -->
        <UniformGrid Rows="3" Columns="3" Margin="10">
            <Button x:Name="Button00" Click="Button_Click" Tag="0,0"/>
            <Button x:Name="Button01" Click="Button_Click" Tag="0,1"/>
            <Button x:Name="Button02" Click="Button_Click" Tag="0,2"/>
            <Button x:Name="Button10" Click="Button_Click" Tag="1,0"/>
            <Button x:Name="Button11" Click="Button_Click" Tag="1,1"/>
            <Button x:Name="Button12" Click="Button_Click" Tag="1,2"/>
            <Button x:Name="Button20" Click="Button_Click" Tag="2,0"/>
            <Button x:Name="Button21" Click="Button_Click" Tag="2,1"/>
            <Button x:Name="Button22" Click="Button_Click" Tag="2,2"/>
        </UniformGrid>

        
        
        <!-- Статус игры -->
        <TextBlock x:Name="StatusTextBlock" Grid.Row="1" Margin="10" Text="Игра началась"/>
        <Button Content="Новая игра" Click="NewGameButton_Click" Grid.Row="1" Margin="10"/>
    </Grid>
</Window>